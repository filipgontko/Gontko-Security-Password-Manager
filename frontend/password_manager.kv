            text: "Gontko Security"
            font_size: 20
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10

        MDTextFieldRound:
            id: email
            hint_text: "e-mail"
            icon_right: "account"
            size_hint_x: None
            width: 200
