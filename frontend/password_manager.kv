# Class representing the sign up form screen.
<Signup>:
    name: "signup"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 25
        padding: 25
        spacing: 25
        orientation: "vertical"

        MDLabel:
            id: welcome_label
            text: "Gontko Security"
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10

        MDTextFieldRound:
            id: username
            hint_text: "username"
            icon_right: "account"
            required: True
            write_tab: False
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            normal_color: app.theme_cls.accent_color
            on_text_validate: root.signup(username.text, password.text)

        MDTextFieldRound:
            id: password
            hint_text: "master password"
            icon_right: "key"
            required: True
            write_tab: False
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            password: True
            normal_color: app.theme_cls.accent_color
            on_text_validate: root.signup(username.text, password.text)

        Widget:
            size_hint_y: None
            height: 5

        MDRoundFlatButton:
            text: "SIGN UP"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                root.signup(username.text, password.text)

        Widget:
            size_hint_y: None
            height: 35

# Class representing the MFA creation screen.
<MFA>:
    name: "mfa"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 25
        padding: 25
        spacing: 25
        orientation: "vertical"

        MDLabel:
            id: welcome_label
            text: "Scan QR code with preferred authenticator app."
            font_size: 20
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10

        MDBoxLayout:
            orientation: "vertical"
            size: 10, 10
            Image:
                id: qr
                keep_ratio: True

        MDTextFieldRound:
            id: otp
            hint_text: "code"
            icon_right: "key"
            required: True
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            normal_color: app.theme_cls.accent_color

        MDRoundFlatButton:
            text: "FINISH"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                root.compare_otp(otp.text)
                otp.text = ""

